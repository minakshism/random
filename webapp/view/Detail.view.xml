<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns="sap.m" controllerName="nl.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page title="Product Detais" navButtonPress="onBack" showNavButton="true">
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="idDetail"
							editable="true"
							layout="ResponsiveGridLayout"
							title="Create Product List"
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false" width="100%" >
						
							<f:content class="sapUiTinyMarginTop">
								
									<Label text="Id" />
									<Input  id="sId"  value=""/>
									<Label text="Name" />
									<Input id="idname" value=""/>
									
									<Label text="Description" />
									<Input id="idDescription" value=""/>
									
									<Label  text="ReleaseDate" />
									<DateTimePicker  id="idDate" 
									value=""/>
									
									<Label text="DiscontinuedDate" />
									<DateTimePicker id="idDiscontinue" 
									value=""/>
									
									<Label text="Rating" />
									<Input id="idRating" value=""/>
									
									<Label text="Price" />
									<Input id="idPrice" value=""/>
							
							</f:content>
						</f:SimpleForm>
					
					</VBox>
				</content>
				
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="Save List" type="Accept" press="createList" />
					</Toolbar>
				</footer>
			</Page>
</mvc:View>