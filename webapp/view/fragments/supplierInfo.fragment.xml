<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"  xmlns:l="sap.ui.layout" xmlns="sap.m">
<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="idSup"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>SUPDETAIL}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="{i18n>SUPID}" />
				<Text text="{LocalDataModel>/ProductInfo/SupplierID}" />
				
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>